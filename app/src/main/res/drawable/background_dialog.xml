<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"><!--形狀-->

    <!--內容-->
    <gradient
        android:angle="135"
        android:centerColor="@color/Honeydew"
        android:endColor="@color/DarkSalmon"
        android:startColor="@color/Peru" />

    <!--邊框-->
    <stroke
        android:width="2dp"
        android:color="@color/Coral" />
    
    <!--內容物件的距離-->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />

    <!--框角矩形的程度-->
    <corners android:radius="10dp" />
</shape>